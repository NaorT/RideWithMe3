<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listrow_drawable"
    android:elevation="5dp"
    android:gravity="center_horizontal"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"


    >

    <ImageView
        android:layout_marginRight="90dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/timeline3"
        android:id="@+id/timeline"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"/>

    <ImageView

        android:id="@+id/mycar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_action_car"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="12dp"
        android:layout_below="@+id/myname"
        android:layout_alignParentEnd="true" />

    <TextView

        android:gravity="center_horizontal"
        android:id="@+id/myname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_alignTop="@+id/timeline"
        android:layout_alignEnd="@+id/mycar"
        android:layout_alignStart="@+id/mycar"
        android:textSize="12dp"/>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginRight="0dp"
        android:id="@+id/myfrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="12dp"

        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/mytime" />

    <TextView

        android:layout_marginRight="3dp"
        android:id="@+id/myto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="12dp"

        android:layout_alignBottom="@+id/timeline"
        android:layout_toStartOf="@+id/timeline" />

    <TextView
        android:layout_marginTop="7dp"
        android:id="@+id/mydate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:layout_below="@+id/mytimestamp"
        android:layout_toStartOf="@+id/timeline" />

    <TextView

        android:id="@+id/mytime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="12dp"

        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/myto" />

    <TextView

        android:gravity="right"
        android:id="@+id/myextra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:layout_alignBottom="@+id/mycar"
        android:layout_toStartOf="@+id/timeline"
        android:layout_marginBottom="7dp"
        android:layout_alignEnd="@+id/mytime" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/myphone"
        android:background="@mipmap/ic_phone"
        android:onClick="makePhoneCall"
        android:layout_marginLeft="5dp"
        android:layout_alignBottom="@+id/myto"
        android:layout_toEndOf="@+id/myuid" />

    <TextView
        android:id="@+id/myuid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView

        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/mytimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="12dp"
        />




</RelativeLayout>