<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ridewithme.LoginActivity" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/reka"
        android:background="@drawable/bck"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:text="שיתוף הטרמפים של אוניברסיטת אריאל"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:gravity="center"
        android:id="@+id/textView2" />

    <Button
        android:backgroundTint="@color/light_blue"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/enter"
        android:text="היכנס"
        android:alpha="0.8"
        android:textColor="@color/white"
        android:background="@drawable/btn_drawable"
        android:layout_below="@+id/password"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="50dp"
        android:textStyle="bold"
        android:textSize="14dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/password"
        android:inputType="textPassword"
        android:hint="סיסמה"
        android:gravity="right|center"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textColorHint="@color/black"
        android:layout_below="@+id/email"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:alpha="0.5"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/btn_drawable"
        android:backgroundTint="@color/white"/>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="61dp"
        android:text="Ride With Me"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/email"
        android:hint="אימייל"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:background="@drawable/btn_drawable"
        android:backgroundTint="@color/white"
        android:layout_marginTop="67dp"
        android:alpha="0.5"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />

    <Button
        android:textColor="@color/white"
        android:background="@drawable/btn_drawable"
        android:backgroundTint="@color/logingreen"
        android:alpha="0.8"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/loginBtn"
        android:text="הירשם כאן"
        android:textStyle="bold"
        android:textSize="14dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:elevation="5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt1"
        android:text="אם אינך רשום, זה הזמן..."
        android:textSize="16dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_above="@+id/loginBtn"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp" />




</RelativeLayout>
